<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.nutritionalrecipebuilder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NutritionApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SignUpActivity"></activity>
        <activity android:name=".ui.SignInActivity"></activity>
        <activity android:name=".ui.HomeActivity"></activity>
        <activity android:name=".ui.NutritionPickActivity"></activity>
        <activity android:name=".ui.FoodResultsActivity"></activity>
        <activity android:name=".ui.RecipeResultsActivity"></activity>
        <activity android:name=".ui.FoodDetailActivity"></activity>
        <activity android:name=".ui.SavedFoodListActivity"></activity>
    </application>

</manifest>