<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.HomeActivity"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/usernameTextView"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/colorPurpleDark"
        android:shadowColor="@color/colorPurpleShadow"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius="0.01"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Diet"
        android:id="@+id/continueButton"
        android:background="@color/colorComplementaryBright"
        android:textColor="@color/colorTextTertiary"
        android:visibility="visible"
        android:layout_above="@+id/savedFoodButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Saved Foods"
        android:id="@+id/savedFoodButton"
        android:background="@color/colorPurpleBright"
        android:textColor="@color/colorTextTertiary"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/recipeButton"
        android:elevation="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Recipes"
        android:id="@+id/recipeButton"
        android:background="@color/colorGreenBright"
        android:textColor="@color/colorTextSecondary"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/userRecipeButton"
        android:elevation="5dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Saved Recipes"
        android:id="@+id/userRecipeButton"
        android:background="@color/colorPrimaryBright"
        android:textColor="@color/colorTextTertiary"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
