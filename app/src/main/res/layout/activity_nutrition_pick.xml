<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.NutritionPickActivity"
    android:background="@color/colorGreenLight">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Foods"
        android:id="@+id/findFoodsButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPurpleBright"
        android:textColor="@color/colorTextTertiary"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/findFoodsButton">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scrollIndicators="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick one nutrient you&apos;d like most prevalent in your diet! Save the food items you like, and start building your new, personalized, diet!"
                android:id="@+id/textView6"
                android:layout_row="0"
                android:layout_column="0"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/colorTextPrimary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:id="@+id/protein_203"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat"
                android:id="@+id/fat_207"
                android:layout_row="2"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water"
                android:id="@+id/water_255"
                android:layout_row="3"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polyunsaturated Fat"
                android:id="@+id/unsatFat_646"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbohydrates"
                android:id="@+id/carbs_205"
                android:layout_row="5"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugars"
                android:id="@+id/sugar_269"
                android:layout_row="6"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dietary Fiber"
                android:id="@+id/fiber_291"
                android:layout_row="7"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcium"
                android:id="@+id/calcium_301"
                android:layout_row="8"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potassium"
                android:id="@+id/potassium_306"
                android:layout_row="9"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cholesterol"
                android:id="@+id/cholesterol_601"
                android:layout_row="10"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin C"
                android:id="@+id/c_401"
                android:layout_row="11"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iron"
                android:id="@+id/iron_303"
                android:layout_row="12"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phosphorus"
                android:id="@+id/phosph_305"
                android:layout_row="13"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcohol"
                android:id="@+id/alcohol_221"
                android:layout_row="14"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caffeine"
                android:id="@+id/caffeine"
                android:layout_row="15"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magnesium"
                android:id="@+id/magnesium"
                android:layout_row="16"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zinc"
                android:id="@+id/zinc"
                android:layout_row="17"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manganese"
                android:id="@+id/manganese"
                android:layout_row="18"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin A"
                android:id="@+id/vitA"
                android:layout_row="19"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beta Carotene"
                android:id="@+id/betaCarotene"
                android:layout_row="20"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin E"
                android:id="@+id/vitE"
                android:layout_row="21"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin D"
                android:id="@+id/vitD"
                android:layout_row="22"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folic Acid"
                android:id="@+id/folicAcid"
                android:layout_row="23"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin B-12"
                android:id="@+id/vitB"
                android:layout_row="24"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niacin"
                android:id="@+id/niacin"
                android:layout_row="25"
                android:layout_column="0"
                android:textColor="@color/colorTextSecondary" />
        </GridLayout>
    </ScrollView>

</RelativeLayout>
