<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:elevation="7dp"
    android:background="@color/colorComplementaryBright"
    android:alpha=".75">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Food Name"
            android:textColor="@color/colorPrimaryBright"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodNutrients"
            android:text="One Nutrient"
            android:textStyle="italic"
            android:textColor="@color/colorGreenBright"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodMeasure"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorPurple"
                android:text="Measure"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>